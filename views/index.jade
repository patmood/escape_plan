extends layout

block content
  .welcome
    h1= title
    h2 A travel site for adventurous day-dreamers

    .form-wrap
      form(method="post", action="", id="origin-form")
        input(type="text", name="origin" id="origin-input" placeholder="Where are you now?")
        input(type="submit" value="GO" id="origin-submit")

  .spinner
    .rect1
    .rect2
    .rect3
    .rect4

  .container
    .itinerary

  script(type="text/template" id="tpl-intro").
    <div class="intro">
      <h2>The furthest place you can travel is <%= destination %>...</h2>
      <h3>Here's how to get there:</h3>
    </div>

  script(type="text/template" id="tpl-error").
    <div class="intro">
      <h2>Oops! Something went wrong. Please try another location...</h2>
    </div>

  script(type="text/template" id="tpl-flight").
    <div class="trip-leg">
      <h2>Flight from <%= sCode %> to <%= tCode %></h2>
      <p>
        Price: $<%= indicativePrice.price %><br>
        Distance: <%= distance %> kms<br>
        Duration: <%= duration %> minutes
      </p>
    </div>

  script(type="text/template" id="tpl-train").
    <div class="trip-leg">
      <h2>Train from <%= sName %> to <%= tName %></h2>
      <p>
        Price: $<%= indicativePrice.price %><br>
        Distance: <%= distance %> kms<br>
        Duration: <%= duration %> minutes
      </p>
    </div>

  script(type="text/template" id="tpl-bus").
    <div class="trip-leg">
      <h2>bus</h2>
      <p>To be completed...</p>
    </div>

  script(type="text/template" id="tpl-ferry").
    <div class="trip-leg">
      <h2>ferry</h2>
      <p>To be completed...</p>
    </div>

  script(type="text/template" id="tpl-walk").
    <div class="trip-leg">
      <h2>walk</h2>
      <p>To be completed...</p>
    </div>

  script(type="text/template" id="tpl-car").
    <div class="trip-leg">
      <h2>car</h2>
      <p>To be completed...</p>
    </div>
