extends layout

block content
  .welcome
    h1= title
    h2 A travel site for adventurous day-dreamers

    .form-wrap
      form(method="post", action="", id="origin-form")
        input(type="text", name="origin" id="origin-input" placeholder="Where are you now?")
        input(type="submit" value="GO" id="origin-submit")

  .spinner
    .rect1
    .rect2
    .rect3
    .rect4

  #map-canvas
  .container
    .itinerary

  script(type="text/template" id="tpl-intro").
    <div class="intro">
      <p class="summary">The furthest place you can travel is <%= destination %>...</p>
      <p class="summary">It's <strong><%= distance %>kms</strong>
        away and will take <strong><%= duration %></strong> hours.</p>
      <p class="summary-small">Here's how to get there:</p>
    </div>

  script(type="text/template" id="tpl-error").
    <div class="intro">
      <h3>Oops! Something went wrong. Please try another location...</h3>
    </div>

  script(type="text/template" id="tpl-flight").
    <div class="trip-leg">
      <h3>Flight from <%= sCode %> to <%= tCode %></h3>
      <p>
        Distance: <%= distance.toFixed(1) %> kms<br>
        Duration: <%= duration %> minutes<br>
        Price: $<%= indicativePrice.price %>
      </p>
    </div>

  script(type="text/template" id="tpl-train").
    <div class="trip-leg">
      <h3>Train from <%= sName %> to <%= tName %></h3>
      <p>
        Distance: <%= distance.toFixed(1) %> kms<br>
        Duration: <%= duration %> minutes<br>
        Price: $<%= indicativePrice.price %>
      </p>
    </div>

  script(type="text/template" id="tpl-bus").
    <div class="trip-leg">
      <h3>Bus from <%= sName %> to <%= tName %></h3>
      <p>
        Distance: <%= distance.toFixed(1) %> kms<br>
        Duration: <%= duration %> minutes<br>
      </p>
    </div>

  script(type="text/template" id="tpl-ferry").
    <div class="trip-leg">
      <h3>Ferry from <%= sName %> to <%= tName %></h3>
      <p>
        Distance: <%= distance.toFixed(1) %> kms<br>
        Duration: <%= duration %> minutes<br>
      </p>
    </div>

  script(type="text/template" id="tpl-walk").
    <div class="trip-leg">
      <h3>Walk from <%= sName %> to <%= tName %></h3>
      <p>
        Distance: <%= distance.toFixed(1) %> kms<br>
        Duration: <%= duration %> minutes<br>
      </p>
    </div>

  script(type="text/template" id="tpl-car").
    <div class="trip-leg">
      <h3>Car from <%= sName %> to <%= tName %></h3>
      <p>
        Distance: <%= distance.toFixed(1) %> kms<br>
        Duration: <%= duration %> minutes<br>
      </p>
    </div>
